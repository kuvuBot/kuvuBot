@page
@model kuvuBot.Panel.Pages.StatisticsModel
@using System.Diagnostics
@using MoreLinq;
@{
    ViewData["Title"] = "Statistics";
    var botContext = new BotContext();
    var stats = botContext.Statistics.DistinctBy(x => x.Date.Date).OrderBy(x => x.Date);
    var statsStrings = stats.Select(x => x.Date.ToString("dd/MM/yyyy")).ToList();
}
<section id="statistics">
    <div class="container pb-2">
        <h2 class="text-center mb-5 pt-2">Statistics</h2>
        <div class="row pb-5">
            <div class="col-md-4">
                <div class="stats-box">
                    <div class="stats-body">
                        @((DateTime.Now - Process.GetCurrentProcess().StartTime).ToString(@"hh\:mm\:ss"))
                    </div>
                    <div class="stats-footer">
                        <p>Uptime</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-box">
                    <div class="stats-body">
                        @((Process.GetCurrentProcess().WorkingSet64 / 1000000d).ToString("F1")) MB
                    </div>
                    <div class="stats-footer">
                        <p>Memory usage</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-box">
                    <div class="stats-body">
                        @(Model.CpuUsage)%
                    </div>
                    <div class="stats-footer">
                        <p>CPU usage</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container text-center d-flex flex-column justify-content-center align-items-center pb-3">
        <div class="w-75">
            <canvas id="Guilds"></canvas>
        </div>

        <div class="w-75">
            <canvas id="ChannelsUsers"></canvas>
        </div>
    </div>
</section>
<script>
    var configChannelsUsers = {
        type: 'line',
        data: {
            labels: @Html.Raw(@Json.Serialize(@statsStrings)),
            datasets: [{
                label: 'Channels',
                fill: false,
                backgroundColor: window.chartColors.blue,
                borderColor: window.chartColors.blue,
                data: @Html.Raw(@Json.Serialize(stats.Select(x=>x.Channels)))
            }, {
                label: 'Users',
                fill: false,
                backgroundColor: window.chartColors.green,
                borderColor: window.chartColors.green,
                data: @Html.Raw(@Json.Serialize(stats.Select(x=>x.Users)))
            }]
        },
        options: {
            responsive: true,
            title: {
                display: false,
                text: 'kuvuBot Chart'
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Day'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
        }
    };

        var configGuilds = {
        type: 'line',
        data: {
            labels: @Html.Raw(@Json.Serialize(@statsStrings)),
            datasets: [{
                label: 'Guilds',
                fill: false,
                backgroundColor: window.chartColors.red,
                borderColor: window.chartColors.red,
                data: @Html.Raw(@Json.Serialize(stats.Select(x=>x.Guilds)))
            }]
        },
        options: {
            responsive: true,
            title: {
                display: false,
                text: 'kuvuBot Chart'
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Day'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
        }
    };

    window.onload = function () {
        var ctx = document.getElementById('Guilds').getContext('2d');
        window.myLine = new Chart(ctx, configGuilds);
        var ctx = document.getElementById('ChannelsUsers').getContext('2d');
        window.myLine = new Chart(ctx, configChannelsUsers);
    };
</script>