@page
@model kuvuBot.Panel.Pages.StatisticsModel
@using MoreLinq;
@{
    ViewData["Title"] = "Statistics";
    var botContext = new BotContext();
    var stats = botContext.Statistics.DistinctBy(x => x.Date.Date);
    var statsStrings = stats.Select(x => x.Date.ToString("dd/MM/yyyy")).ToList();
}

<h1>Statistics</h1>


<div style="width:75%;">
    <canvas id="canvas"></canvas>
</div>
<script>
    var config = {
        type: 'line',
        data: {
            labels: @Html.Raw(@Json.Serialize(@statsStrings)),
            datasets: [{
                label: 'Guilds',
                fill: false,
                backgroundColor: window.chartColors.red,
                borderColor: window.chartColors.red,
                data: @Html.Raw(@Json.Serialize(stats.Select(x=>x.Guilds)))
            }, {
                label: 'Channels',
                fill: false,
                backgroundColor: window.chartColors.blue,
                borderColor: window.chartColors.blue,
                data: @Html.Raw(@Json.Serialize(stats.Select(x=>x.Channels)))
            }, {
                label: 'Users',
                fill: false,
                backgroundColor: window.chartColors.green,
                borderColor: window.chartColors.green,
                data: @Html.Raw(@Json.Serialize(stats.Select(x=>x.Users)))
            }]
        },
        options: {
            responsive: true,
            title: {
                display: false,
                text: 'kuvuBot Chart'
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Day'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
        }
    };

    window.onload = function () {
        var ctx = document.getElementById('canvas').getContext('2d');
        window.myLine = new Chart(ctx, config);
    };
</script>